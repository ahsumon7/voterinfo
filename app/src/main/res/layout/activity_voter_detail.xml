<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Voting Center Name -->
        <TextView
            android:id="@+id/tvCenterNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voting Center Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="12dp"/>

        <!-- Male Voters -->
        <TextView
            android:id="@+id/tvMaleVoters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male Voters: 0"
            android:textSize="16sp"
            android:layout_marginBottom="6dp"/>

        <!-- Female Voters -->
        <TextView
            android:id="@+id/tvFemaleVoters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female Voters: 0"
            android:textSize="16sp"
            android:layout_marginBottom="6dp"/>

        <!-- Third Gender Voters -->
        <TextView
            android:id="@+id/tvThirdGenderVoters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Third Gender Voters: 0"
            android:textSize="16sp"
            android:layout_marginBottom="6dp"/>

        <!-- Total Voters -->
        <TextView
            android:id="@+id/tvTotalVoters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Voters: 0"
            android:textSize="16sp"
            android:layout_marginBottom="6dp"/>

        <!-- Contact Name -->
        <TextView
            android:id="@+id/tvContactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Name: "
            android:textSize="16sp"
            android:layout_marginBottom="6dp"/>

        <!-- Contact Phone -->
    <!--    <TextView
            android:id="@+id/tvContactPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Phone: "
            android:textSize="16sp"
            android:layout_marginBottom="6dp"/>-->
        <TextView
            android:id="@+id/tvContactPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact_phone_n_a"
            android:textSize="16sp"
            android:textColor="@color/teal_700"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true"
            android:autoLink="phone" />


    </LinearLayout>

</ScrollView>
