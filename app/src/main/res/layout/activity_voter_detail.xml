<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".VoterDetailActivity">

    <TextView
        android:id="@+id/tvCenterNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        tools:text="ভোটকেন্দ্রের নাম" />

    <TextView
        android:id="@+id/tvMaleVoters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/male_voters"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvFemaleVoters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/female_voters"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvThirdGenderVoters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/third_gender_voters"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvTotalVoters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/total_voters"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>
  <!--  <TextView
        android:id="@+id/tvTotalVoters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/total_voters"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>-->

    <!-- Added Name TextView -->
    <TextView
        android:id="@+id/tvContactName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Md Zihad"
        android:textSize="18sp"
        android:layout_marginTop="24dp" /> <!-- Added some top margin -->

    <!-- Added Phone Number TextView -->
    <TextView
        android:id="@+id/tvContactPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0192178844"
        android:textSize="18sp"
        android:autoLink="phone"
        android:linksClickable="true"
        android:textColorLink="@color/purple_500"
        android:layout_marginTop="8dp" />


</LinearLayout>



